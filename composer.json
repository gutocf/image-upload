{
    "name": "gutocf/image-upload",
    "description": "Image upload for CakePHP 4",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "upload",
        "files",
        "images",
        "behavior",
        "orm"
    ],
    "homepage": "https://github.com/gutocf/image-upload",
    "license": "MIT",
    "authors": [
        {
            "name": "Augusto CÃ©sar Ferreira",
            "email": "gutocf@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "cakephp/cakephp": "^4.1.0",
        "imagine/imagine": "^1.2",
        "composer/composer": "2.2.*"
    },
    "require-dev": {
        "cakephp/bake": "^2.0.3",
        "cakephp/cakephp-codesniffer": "~4.2.0",
        "cakephp/debug_kit": "^4.1",
        "josegonzalez/dotenv": "^3.2",
        "phpunit/phpunit": "9.5",
        "psy/psysh": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Gutocf\\ImageUpload\\": "src",
            "Gutocf\\ImageUpload\\Test\\Fixture\\": "tests\\Fixture"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gutocf\\ImageUpload\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --configuration=phpunit.xml",
        "coverage": "phpunit --colors=always --configuration=phpunit.xml --coverage-html=tmp/_reports/coverage/",
        "coverage-xml": "phpunit --coverage-clover=tmp/coverage.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
